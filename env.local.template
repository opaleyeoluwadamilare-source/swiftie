# Copy this file to .env.local and it will be used automatically
# IMPORTANT: Replace the placeholders below with your actual API keys
# Never commit .env.local to git - it's already in .gitignore

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Application URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000
# For production: https://your-domain.com

# Database Configuration (PostgreSQL on Render)
# Get your database URL from Render dashboard
DATABASE_URL=postgresql://username:password@host:port/database_name

